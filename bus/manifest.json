{
  "default_locale": "ja",
  "name": "__MSG_extName__",
  "version": "0.1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "22",
  "description": "__MSG_extDesc__",
  "homepage_url": "https://github.com/tknhs/K.I.Tools",
